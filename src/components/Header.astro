---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, DOC_SOURCE_URL } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<a class="source" href={DOC_SOURCE_URL} target="_blank" rel="noreferrer">Markdown</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	.internal-links {
		display: flex;
		gap: 0.5rem;
		align-items: center;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.source {
		border: 1px solid rgb(var(--black));
		border-radius: 999px;
		padding: 0.35em 0.9em;
	}
</style>
